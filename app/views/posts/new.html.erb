<div class="wrapper">
  <div class="main">
    <%= render 'header' %>
      <div class="new_post_container">
        <div class="new_post-header">
          <p>Post your favorite watch</p>
        </div>
        <div class="new_post-form">
          <%= form_for(@post) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="input-form">
            <%= f.label :image, "・Image", class: "form_image" %>
              <%= f.file_field :image, class: "form_image", required: true %>
            <%= f.label :design, "・Design", class: "form_design" %>
              <%= f.collection_select :name_id, Design.all, :id, :name, prompt: "--", class: "form_design", required: true %>
              <p>・About</p>
            <%= f.text_area :about, :maxlength => "300", class:"form_about", required: true %>
            <%= f.submit "Send", class:"form_send-button" %>
          <% end %>
          </div>
        </div>
      </div>
  </div>
</div>


