<div class="user_contents">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="user_contents--form">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, required: true, autocomplete:"off" %>
    </div>

    <div class="field">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, required: true, autocomplete:"off" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete:"off", required: true %>
    </div>

    <div class="field">
      <%= f.label :prefecture %><br />
      <%= f.text_field :Prefectures, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", required: true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:"submit-btn" %>
    </div>
  </div>
  <% end %>
  <div class="user_login_select--contents">
    <div class="select_sns--facebook">
      <i class="fab fa-facebook-square"></i>
      <%= link_to "Facebookと連携する", user_facebook_omniauth_authorize_path %>
    </div>
    <div class="select_sns--twitter">
      <i class="fab fa-twitter-square"></i>
      <%= link_to "Twitterと連携する", user_twitter_omniauth_authorize_path %>
    </div>
    <div class="select_sns--google">
      <i class="fab fa-google"></i>
      <%= link_to "Googleと連携する", user_google_oauth2_omniauth_authorize_path %>
    </div>
  </div>
</div>
